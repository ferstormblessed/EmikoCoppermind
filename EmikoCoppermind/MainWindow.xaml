<Window x:Class="EmikoCoppermind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmikoCoppermind"
        mc:Ignorable="d"
        Title="OfficeMap" Height="500" Width="800">
    <Grid>
       
        <TabControl x:Name="Tabs">
            <TabItem x:Name="Bauabschnitt_1_tab" Header="Bauabschnitt 1" Width="97">
                <Grid Background="#FFE5E5E5">
                    <Frame x:Name="Page_1_Frame" Content="Frame" NavigationUIVisibility="Hidden" Source="/Page1.xaml"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="Bauabschnitt_2_tab" Header="Bauabschnitt 2">
                <Grid Background="#FFE5E5E5">
                    <Frame x:Name="Page_2_frame" Content="Frame" NavigationUIVisibility="Hidden" Source="/Page2.xaml"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="Bauabschnitt_3_tab" Header="Bauabschnitt 3">
                <Grid Background="#FFE5E5E5">
                    <Frame x:Name="Page_3_tab" Content="Frame" NavigationUIVisibility="Hidden" Source="/Page3.xaml"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>

</Window>

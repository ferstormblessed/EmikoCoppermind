<Window x:Class="EmikoCoppermind.ExcelPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmikoCoppermind"
        mc:Ignorable="d"
         Title="Excel Popup" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Name="ExcelDataGrid" Margin="10" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Name="OpenInExcelButton" Content="Open in Excel" Width="100" Margin="5" Click="OpenInExcelButton_Click" />
            <Button Name="CloseButton" Content="Close" Width="100" Margin="5" Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>
